{% extends "structure/base.html.twig" %}
{% block content %}
    <div id="defaultCountdown"></div>
    
    <div class="divAlignCenter listPage">
        
        {% if flash.quoteError.0 is not empty %}
            <p class="error">{{ flash.quoteError.0  }}</p>
        {% endif %}
        
        <header class="listHeader">
            <a href="{{ path_for('logout') }}" class="logoutBtn">Logout</a>
            <a href="download" class="jsDownloadBtn logoutBtn">Download</a>
            <h1><b style="color:#E92F32">SG</b> - List of Quotation <span>Total : {{ numberListedQuote }} / {{ totalQuote }} @ {{ lastUpdateDateTime }}</span></h1>
        </header>
        
        <form action="{{ path_for('pass') }}" method="POST">
        <table cellpadding="0" cellspacing="0" border="0" class="listTable">
            <tr class="listTdTitle">
                <td>Name</td>
                <td>Email</td>
                <td>Mobile</td>
                <td>Insurance Type</td>
                <td>NCD</td>
                <td>Driving Exp</td>
                <td>Make</td>
                <td>Model</td>
                <td>YOR</td>
                <td>Effective date</td>
                
                
                <td>Sale</td>
                <td>&nbsp;</td>
            </tr>
        {% for quote in quoteAr %}
                <tr class="{{ cycle(['altBg2', 'altBg'], loop.index)}}">    
                    <td><input type="hidden" name="quote[{{ quote.id }}][id]" value="{{ quote.id }}">{{ quote.Surname }} {{ quote.first_name }}</td>
                    
                    <td>{{ quote.Email }}</td>
                    <td>{{ quote.Mobile }}</td>
                    <td>{{ quote.insTypeMap() }}</td>
                    <td>{{ quote.m1_p_ncd }}</td>
                    <td>{{ quote.showDriverExp() }}</td>
                    <td>{{ quote.Make }}</td>
                    <td>{{ quote.Model }}</td>
                    <td>{{ quote.m1_year_reg }}</td>
                    <td>{{ quote.m1_effective_date }}</td>
                    
                    <td><select name="quote[{{ quote.id }}][sale]">{% include 'chunk/salesSelectOption.html.twig' %}</select> </td>
                    <td><input type="submit" name="pass[{{ quote.id }}]" value="Pass"></td>
                </tr>
        {% endfor %}
        </table>
        <div style="padding-top:15px"><input type="submit" name="pass[all]" value="Pass All" class="listPassAllBtn"></div>
        </form>
    </div>
{% endblock %}

{% block bottomJS %}
    {% include 'chunk/bottomJS.html.twig' %}
{% endblock %}
