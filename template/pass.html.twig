{# empty Twig template #}
{% extends "structure/base.html.twig" %}

{% block metahead  %}
<META http-equiv="refresh" content="10;URL={{ path_for('list') }}">
{% endblock %}

{% block content %}
    <div class="divAlignCenter listPage">
        {% if flash.quoteError.0 is not empty %}
            <p class="error">{{ flash.quoteError.0  }}</p>
        {% endif %}

        <h2><b style="color:#E92F32">HK</b> - Below is Pushed Result</h2>
        
        <h3>Sales Summary</h3>
        <ul>
            {% for sale, count  in saleArray %}
            <li>{{ sale }} - {{ count }}
            </li>
            {% endfor %}
        </ul>
        
        <hr />
        
        <h3>Visitor Summary</h3>
        <ul>
            {% for email in emailArray %}
            <li>{{ email.email }} 
                {% if email.rePush == 1 %}
                    / <span class="error">Can not re-push</span>
                {% endif %}
            </li>
            {% endfor %}
        </ul>
        
        <p><a href=" {{ path_for('list') }} ">Click Here to go Back</a></p>
        
        <p style="text-align:right"><a href=" {{ path_for('list') }} ">Click Here to go Back</a></p>
    </div>
{% endblock %}
